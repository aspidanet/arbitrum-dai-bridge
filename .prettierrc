{
  "printWidth": 120,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "proseWrap": "always",
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": false
      }
    }
  ]
}
